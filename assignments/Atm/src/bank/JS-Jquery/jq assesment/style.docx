body {
    text-align: center;
}
div {
    display: inline-block;
}
button {
    display: inline-block;
    padding: 10px 20px;
}
#table {
   
    
    display: grid;
    grid-template-columns: auto auto auto;
    background-color: #2196F3;
    padding: 5px;
    
}
th, td {
    background-color: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(0, 0, 0, 0.8);
    padding: 20px;
    font-size: 30px;
    text-align: center;
}